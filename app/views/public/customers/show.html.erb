<div class="col-md-2">
   <h5 class="bg-light text-center">マイページ</h5>
</div>
<div class="container">

       <label>
            登録情報
            <%= link_to '編集する',public_customers_infomation_edit_path,class:'btn btn-sm btn-success' %>
        </label>
        <div class="row">
        <div class="col-md-10">
        <table class="table table-bordered">

            <tr>
                <td class="table-secondary">氏名</td>
                <td><%= @customer.first_name %> <%= @customer.last_name %></td>
            </tr>

            <tr>
                <td class="table-secondary">カナ</td>
                <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
            </tr>

            <tr>
                <td class="table-secondary">郵便番号</td>
                <td><%= @customer.postal_code %></td>
            </tr>

            <tr>
                <td class="table-secondary">電話番号</td>
                <td><%= @customer.telephone_number %></td>
            </tr>

            <tr>
                <td class="table-secondary">メールアドレス</td>
                <td><%= @customer.email %></td>
            </tr>
        </table>
        </div>
        </div>
        <label>
        配送先
        <%= link_to '一覧を見る',public_destinations_path,class:'btn btn-sm btn-primary' %>
        </label>
        <label>
        注文履歴
        <%= link_to '一覧を見る',public_orders_path,class:'btn btn-sm btn-primary' %>
        </label>
</div>

