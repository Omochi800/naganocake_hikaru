<p>会員情報編集</p>


<div class="container">
    <%= form_with model: @customer,url: public_customers_infomasion_path,method: :patch do |f| %>
    <div class="field">
    <%= f.label:氏名 %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    </div>
    <div class="field">
    <%= f.label:カナ %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
    </div>
    <div class="field">
    <%= f.label:郵便番号 %>
    <%= f.text_field:postal_code %>
    </div>
    <div class="field">
    <%= f.label:住所 %>
    <%= f.text_field:address %>
    </div>
    <div class="field">
    <%= f.label:電話番号 %>
    <%= f.text_field:telephone_number %>
    </div>
    <div class="field">
    <%= f.label:メールアドレス %>
    <%= f.text_field:email %>
    </div>
    <%= f.submit '変更を保存',class:'btn btn-sm btn-success' %>
    <%= link_to '退会する',class:'btn-btn-sm btn-danger' %>
    <% end %>
</div>