<h5>配送先登録/一覧</h5>
<%= form_with model: @destination,url: public_destinations_path,local: true do |f| %>

<div class="field">
  <%= f.label:郵便番号（ハイフンなし） %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label:住所 %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label:宛名%>
  <%= f.text_field :name %>
</div>

<%= f.submit '新規登録',class:'btn btn-sm btn-success' %>
<% end %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
    <tr>
    <td><%= destination.postal_code %></td>
    <td><%= destination.address %></td>
    <td><%= destination.name %></td>
    <td>
      <%= link_to '編集する',edit_public_destination_path(destination),class:'btn btn-sm btn-success' %>
      <%= link_to '削除する',public_destination_path(destination),method: :delete,class:'btn btn-sm btn-danger' %>
    </td>
    <% end %>
    </tr>
  </tbody>
</table>

