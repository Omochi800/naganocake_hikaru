<h5>ショッピングカート</h5>

<%= link_to'カートを空にする',"/public/cart_items/:cart_item_id/destroy_all",method: :delete,class:'btn btn-sm btn-danger' %>
<table>

  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <%= form_with model: @cart_item,url: public_cart_items_path(cart_item),method: :patch do |f| %>
        <td>
            <%= f.select:amount,*[1..5] %>
            <%=  f.submit '変更',class:'btn btn-sm btn-success' %>
        </td>
        <% end %>
        <td><%= cart_item.sub_total %></td>
        <td><%= link_to '削除する',public_cart_item_path(cart_item),method: :delete,class:'btn btn-sm btn-danger' %></td>
          <tr><%= @sum +=  cart_item.sub_total %></tr>
      </tr>


      <% end %>

    </tbody>
  </thead>
</table>





<%= link_to '買い物を続ける',public_items_path,class:'btn btn-sm btn-primary' %>


<%= link_to '情報入力に進む',new_public_order_path,class:'btn btn-sm btn-success' %>


