<h4>注文情報確認</h4>

<div class="container">
  <div class="row">
    <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.price).to_s(:delimited) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.sub_total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

    <table>
    <tr>
      <td>送料</td>
      <td><%= @postage %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td></td>
    </tr>
  </table>
 </div>



  <div clas="field">
    <strong>支払い方法</strong>
    <%= @order.payment_method_i18n %>
  </div>
  <div clas="field">
    <strong>お届け先</strong>
      〒<%= @order.postal_code %>
        <%= @order.address %><br>
        <%= @order.name %>
  </div>

</div>
<%= form_with model: @order,url: public_orders_path,method: :post do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :address %>

<%= f.submit '注文を確定する',class:'btn btn-sm btn-success' %>
<% end %>
