<h4>注文履歴詳細</h4>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.postal_code %>
          <%= order.address %>
          <%= order.name %>
      </td>
      <td><%= order.item.name %></td>
      <td></td>
      <td></td>
      <td><%= link_to '表示する',public_order_path,class:'btn btn-sm btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>