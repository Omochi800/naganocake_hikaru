<div class="col-md-1">
   <h5 class="bg-light">注文履歴詳細</h5>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.postal_code %>
                <%= order.address %>
                <%= order.name %>
            </td>
            <td><%= order.item.name %></td>
            <td></td>
            <td></td>
            <td><%= link_to '表示する',public_order_path,class:'btn btn-sm btn-primary' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>