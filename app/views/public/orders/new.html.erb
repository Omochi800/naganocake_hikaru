<div class="col-md-1">
   <h5 class="bg-light">注文情報入力</h5>
</div>
<%= form_with model: @order,url: '/public/orders/:order_id/confirm',method: :post do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div class="field">
        <p><strong>支払い方法</strong></p>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      </div>
      <div class="field">
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
      </div>

      <div class="field">
        <p><strong>お届け先</strong></p>
          <%= f.radio_button :select_address,0 %>
          <%= f.label :ご自身の住所 %>
          <p>〒<%= current_customer.postal_code %>
              <%= current_customer.address %><br>
              <%= current_customer.first_name %>
              <%= current_customer.last_name %>
          </p>
      </div>
     <div class="field">
        <%= f.radio_button :select_address,1 %>
        <%= f.label :登録先住所から選択 %>
    　　<p><%= f.select :address_id, options_from_collection_for_select(Destination.all, :id,:destination_display) %></p>
     </div>
     <div class="field">
      <%= f.radio_button :select_address,2 %>
      <%= f.label :新しいお届け先 %>


      <p>郵便番号（ハイフンなし）</p>
      <%= f.text_field :postal_code %>


      <p>住所</p>
      <%= f.text_field :address %>

      <p>宛名</p>
      <%= f.text_field :name %>
     </div>
    </div>
  </div>
</div>
    <%= f.submit '確認画面へ進む',class:'btn btn-sm btn-primary' %>

<% end %>