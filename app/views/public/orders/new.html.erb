<%= f.label:支払い方法　%>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<%= f.label: お届け先 %>
<%= f.radio_button :address,"ご自身の住所" %>

<%= f.radio_button :address,"登録先住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %>

<%= f.radio_button :address,"新しいお届け先" %>
<% form_with model: @order do |f| %>
<div class="field">
  <%= f.label:郵便番号(ハイフンなし)　%>
  <%= f.text_field:postal_code %>
</div>
<div class="field">
  <%= f.label:住所 %>
  <%= f.text_field:address %>
</div>
<div class="field">
  <%= f.label:氏名 %>
  <%= f.text_field:name %>
</div>
<% end %>

<%= f.submit '確認画面へ進む',class:'btn btn-sm btn-primary' %>