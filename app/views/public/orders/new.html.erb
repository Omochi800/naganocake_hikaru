<h4>注文情報入力</h4>
<%= form_with model: @order,url: '/public/orders/:order_id/confirm',method: :patch do |f| %>
<div class="field">
  <p><strong>支払い方法</strong></p>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
</div>

<div class="field">
  <p><strong>お届け先</strong></p>
  <%= f.label :destination,'ご自身の住所' %>
  <%= f.radio_button :destination,'ご自身の住所' %>

  <%= f.label :destination,'登録先住所から選択' %>
  <%= f.radio_button :destination,'登録先住所から選択' %>
  <%= f.select :address_id, options_from_collection_for_select(Destination.all, :id,:destination_display) %>

  <%= f.radio_button :delivery_address,'新しいお届け先' %>
</div>


<div class="field">
  <%= f.label:郵便番号 %>
  <%= f.text_field :delivery_postal_code %>
</div>
<div class="field">
  <%= f.label:住所 %>
  <%= f.text_field :delivery_address %>
</div>
<div class="field">
  <%= f.label:氏名 %>
  <%= f.text_field :delivery_name %>
</div>


<%= f.submit '確認画面へ進む',class:'btn btn-sm btn-primary' %>
<% end %>