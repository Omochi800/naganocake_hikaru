<h6>新規会員登録</h6>

<%= form_with model: @customer,url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
   <%= f.label:名前 %>
    (姓)<%= f.text_field :first_name %>
    (名)<%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label:フリガナ %>
    (セイ)<%= f.text_field :first_name_kana %>
    (メイ)<%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label:メールアドレス %>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">

    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code,autofocus: true %>
  </div>

  <div class="field">

    <%= f.label :住所 %>
    <%= f.text_field :address,autofocus: true %>
  </div>

  <div class="field">

    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :telephone_number,autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-sm btn-success" %>
  </div>
<% end %>

<h5>既に登録済みの方</h5>


<%= render "public/shared/links" %>からログインしてください。
