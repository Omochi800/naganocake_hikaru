<h6>新規会員登録</h6>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    名前
    (姓)<%= f.text_field :first_name %>
    (名)<%= f.text_field :last_name %>
  </div>

  <div class="field">
    フリガナ
    (セイ)<%= f.text_field :first_name_kana %>
    (メイ)<%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    メールアドレス
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    郵便番号(ハイフンなし)
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code,autofocus: true %>
  </div>

  <div class="field">
    住所
    <%= f.label :address %>
    <%= f.text_field :address,autofocus: true %>
  </div>

  <div class="field">
    電話番号(ハイフンなし)
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number,autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-sm btn-success" %>
  </div>
<% end %>

<h5>既に登録済みの方</h5>


<%= render "public/shared/links" %>からログインしてください。
