<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/0fcbfc5bc0.js" crossorigin="anonymous"></script>
    <title>Naganocake</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content ="width=device-width,intial-scal=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand p-3" href="/">
            <span>naganocake</span>
          </a>

            <ul class ="navbar-nav ml-auto">

            <% if admin_signed_in? %>
            <li class ="nav-item">
            <%= link_to "商品一覧",admin_items_path %>
            </li>
            <li class ="nav-item">
              <%= link_to "会員一覧",admin_customers_path %>
            </li>
            <li class ="nav-item">
              <%= link_to "注文履歴一覧",admin_order_details_path %>
            </li>
            <li class ="nav-item">
              <%= link_to "ジャンル一覧",admin_genres_path %>
            </li>
            <li class ="nav-item">
              <%= link_to "ログアウト",destroy_admin_session_path,method: :delete,class:"nav-link" do %>

              <% end%>
            </li>
            <% else %>

            <li class ="nav-item">
            <%= link_to "About",public_about_path %>
            </li>
            <li class ="nav-item">
            <%= link_to "商品一覧",admin_items_path %></li>
            <li class ="nav-item">
            <%= link_to "新規登録",new_customer_registration_path %>
            </li>
            <li class ="nav-item">
            <%= link_to "ログイン",customer_session_path %>
            </li>
            <% end %>

            <% if customer_signed_in? %>
            <li class ="nav-item">
            <%= link_to "マイページ",public_customers_my_page_path %>
            </li>
            <li class ="nav-item">
              <%= link_to "商品一覧",public_items_path %>
            </li>
            <li class ="nav-item">
              <%= link_to "カート",public_cart_items_path %>
            </li>
            <li class ="nav-item">
              

              
            </li>
            <% else %>

            <li class ="nav-item">
            <%= link_to "About",public_about_path %>
            </li>
            <li class ="nav-item">
            <%= link_to "商品一覧",admin_items_path %></li>
            <li class ="nav-item">
            <%= link_to "新規登録",new_customer_registration_path %>
            </li>
            <li class ="nav-item">
            <%= link_to "ログイン",customer_session_path %>
            </li>
            </ul>

            <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
