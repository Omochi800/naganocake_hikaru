<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/0fcbfc5bc0.js" crossorigin="anonymous"></script>
    <title>Naganocake</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content ="width=device-width,intial-scal=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand p-3" href="/public">
            <span>naganocake</span>
          </a>

            <ul class ="navbar-nav ml-auto">

            <% if admin_signed_in? %>
            <li class ="nav-item">
            <%= link_to admin_items_path,class:"btn btn-outline-secondary text-dark" do %>
            商品一覧
            <% end %>
            </li>
            <li class ="nav-item">
              <%= link_to admin_customers_path,class:"btn btn-outline-secondary text-dark" do %>
              会員一覧
              <% end %>
            </li>
            <li class ="nav-item">
              <%= link_to admin_order_details_path,class:"btn btn-outline-secondary text-dark" do %>
              注文一覧
              <% end %>
            </li>
            <li class ="nav-item">
              <%= link_to admin_genres_path,class:"btn btn-outline-secondary text-dark" do %>
              ジャンル一覧
              <% end %>
            </li>
            <li class ="nav-item">
              <%= link_to destroy_admin_session_path,method: :delete,class:"nav-link btn btn-outline-secondary text-dark" do %>
              ログアウト
              <% end %>
            </li>

            <% elsif customer_signed_in? %>
            <li>
              ようこそ<%= current_customer.first_name %>さん！
            </li>
            <li class ="nav-item">
            <%= link_to public_customers_my_page_path,class:"btn btn-outline-secondary text-dark" do %>
            マイページ
            <% end %>
            </li>
            <li class ="nav-item">
              <%= link_to public_items_path,class:"btn btn-outline-secondary text-dark" do %>
              商品一覧
              <% end %>
            </li>
            <li class ="nav-item">
              <%= link_to public_cart_items_path,class:"btn btn-outline-secondary text-dark" do %>
              カート
              <% end %>
            </li>
            <li class="nav-item">
               <%= link_to destroy_customer_session_path,method: :delete,class:" btn btn-outline-secondary text-dark" do %>
               ログアウト
               <% end %>
            </li>
            <% else %>

            <li class ="nav-item">
            <%= link_to public_about_path,class:"btn btn-outline-secondary text-dark" do %>
            About
            <% end %>
            </li>
            <li class ="nav-item">
            <%= link_to admin_items_path,class:"btn btn-outline-secondary text-dark" do %>
            商品一覧
            <% end %>
            </li>
            <li class ="nav-item">
            <%= link_to new_customer_registration_path,class:"btn btn-outline-secondary text-dark" do %>
            新規登録
            <% end %>
            </li>
            <li class ="nav-item">
            <%= link_to customer_session_path,class:"btn btn-outline-secondary text-dark" do %>
            ログイン
            <% end %>
            </li>

            <% end %>

        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
  <footer>
    <div class ="container mt-5">
      <div class="row">
      <div class ="mx-auto">
      <p>CopyRight Hikaru.inc</p>
      </div>
      </div>
    </div>

  </footer>
</html>
