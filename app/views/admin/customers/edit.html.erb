<p><%= @customer.first_name %>
   <%= @customer.last_name %>
さんの会員情報編集</p>

<%= form_with model: @customer,url: admin_customer_path(@customer.id),method: :patch do |f| %>
<div class="field">
  <%= f.label:会員ID %>
  <%= @customer.id%>
</div>
<div class="field">
  <%= f.label:氏名 %>
  <%= f.text_field:first_name,autofocus:true %>
  <%= f.text_field:last_name,autofocus:true %>
</div>
<div class="field">
  <%= f.label:カナ %>
  <%= f.text_field:first_name_kana,autofocus:true %>
  <%= f.text_field:last_name_kana,autofocus:true %>
</div>
<div class="field">
  <%= f.label:郵便番号 %>
  <%= f.text_field:postal_code,autofocus:true %>
</div>
<div class="field">
  <%= f.label:住所 %>
  <%= f.text_field:address,autofocus:true %>
</div>
<div class="field">
  <%= f.label:電話番号 %>
  <%= f.text_field:telephone_number,autofocus:true %>
</div>
<div class="field">
  <%= f.label:メールアドレス %>
  <%= f.text_field:email,autofocus:true %>
</div>
<div class="field">
  <%= f.label:会員ステータス %>
  <%= f.radio_button :is_deleted,[['有効',true],['退会',false]] %>
</div>
<%= f.submit '変更を保存',class:'btn btn-sm btn-success' %>
<%= link_to '会員一覧に戻る',admin_customers_path,class:'btn btn-sm btn-primary' %>

<% end %>