
<div class="container">
  <div class="row">
    <div class="col-md-2 text-center">
      <h5 class="bg-light">会員一覧</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr class="table-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer|  %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer.id) do %>
                <%= customer.first_name %>
                <%= customer.last_name %>
                <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><% if customer.is_deleted %>
                  <strong class="text-secondary">退会</strong>
                <% else %>
                  <strong class="text-success">有効</strong>
                <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>