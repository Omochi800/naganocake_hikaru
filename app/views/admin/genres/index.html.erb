<h5>ジャンル一覧・追加</h5>
<%= form_with model: @genre,url: admin_genres_path do |f| %>

<div class="field">
  <%= f.label:ジャンル名 %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録',class: 'btn btn-sm btn-success' %>

</div>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
    <td><%= genre.name %></td>
    <td><%= link_to '編集する',edit_admin_genre_path(genre),class: 'btn btn-sm btn-success' %></td>
    <% end %>
    </tr>
  </tbody>
</table>
<% end %>
