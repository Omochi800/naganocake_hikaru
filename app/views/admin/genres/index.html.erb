<div class="col-md-2">
   <p class="bg-light">ジャンル一覧/追加</p>
</div>
<%= form_with model: @genre,url: admin_genres_path do |f| %>
<div class="container">
  <div class= "row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label:ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録',class: 'btn btn-sm btn-success' %>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する',edit_admin_genre_path(genre),class: 'btn btn-sm btn-success' %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
      <% end %>

    </div>
  </div>
</div>
<%= paginate @genres %>