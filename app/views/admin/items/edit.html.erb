<h3>商品編集</h3>
<%= form_with model: @item do |f| %>

<label for="inputImage">商品画像</label>
<%= f.file_field :image,placeholder:"商品画像",accept:"image/*" %>

<label for="inputName">商品名</label>
<%= f.text_field :name,autofocus: true,placeholder:"商品名" %>

<label for="inputIntroduction">商品説明</label>
<%= f.text_area :introduction,placeholder:"商品説明" %>
<label for ="inputGenre">ジャンル</label>

<label for="inputPrice">税抜価格</label>
<%= f.text_field :price,placeholder:"税抜価格" %>
<label for="inputIs_active">販売ステータス</label>
<%= f.select :is_active,[['販売中',true],['販売停止中',false]] %>



<%= f.submit "変更を保存",class:"btn btn-am btn-success"　%>