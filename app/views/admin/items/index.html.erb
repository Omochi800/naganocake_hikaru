<div class ="container">
  <div class="row">
    <div class="col-md-2">
     <h5 class="bg-light text-center">商品一覧</5>
    </div>
    <div class="col-xs-6 text-light offset-9">
      <%= link_to new_admin_item_path do %>
      <button type="button" class="btn-light rounded-circle p-0 btn-md" style="width:2rem;height:2rem;">+</button>
      <% end %>
    </div>
  </div>
  <div class ="row">
    <div class="col-md-12">
      <table class="table">

        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><% genre = Genre.find(item.genre_id) %>
              <%= genre.name %></td>
            <td>
                <% if item.is_active %>
                  <strong class="text-success">販売中</strong>
                <% else %>
                  <strong class="text-secondary">販売停止中</strong>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="offset-5">
  <%= paginate @items %>
</div>
