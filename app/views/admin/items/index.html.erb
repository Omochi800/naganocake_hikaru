<div class="col-md-1">
   <h5 class="bg-light">商品一覧</h5>
</div>
<div class ="container">
  <div class ="row">
    <div class="col-md-10">
      <table class="table">

        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>

          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre_id %></td>
            <td><%= item.is_active %></td>
          </tr>
          <% end %>




        </tbody>
      </table>
    </div>
  </div>
</div>
