
<div class="container">
    <div class="col-md-2">
   <p class="bg-light">商品新規登録</p>
</div>
  <%= form_with model: @item,url:'/admin/items',local:true do |f| %>
    <div class="row">
        <div class="col-md-8 offset-md-4">
                <div class="form-group">
                    <label>商品画像</label>
                    <%= f.file_field :image,accept:"image/*" %>
                </div>
                <div class="form-group">
                    <label>商品名</label>
                　　<%= f.text_field :name %>
                </div>

                <div class="form-group">
                    <label>商品説明</label>
                    <%= f.text_area :introduction,:size =>"30x10" %>
                </div>
                <div class="form-group">
                    <label>ジャンル</label>
                    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
                </div>

                <div class="form-group">
                    <label>税抜価格</label>
                    <%= f.text_field :price %>円
                </div>
                <div class="form-group">
                    <label>販売ステータス</label>
                    <%= f.label :is_active,'販売中',value:true %>
                    <%= f.radio_button :is_active,true %>
                    <%= f.label :is_active,'販売停止中',value:false %>
                    <%= f.radio_button :is_active,false %>
                </div>
                    <%= f.submit '新規登録',class:'btn btn-sm btn-success'%>
                <% end %>

        </div>
    </div>
</div>