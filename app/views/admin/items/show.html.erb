<h4 class="btn btn-light">商品詳細</h4>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <p><%= image_tag @item.get_image,size:"300x200" %></p>
      </div>
      <div class="col-md-8">
        <p>
          商品名
          <%= @item.name %>
        </p>
        <p>
          商品説明
          <%= @item.introduction %>
        </p>
        <p>
          ジャンル
          <%= @genre.name %>
        </p>
        <p>
          税込価格（税抜価格）
          <%= @item.price %>
        </p>
        <p class="text-success">販売ステータス
        <%= @item.is_active %>
        </p>
        <%= link_to '編集する',edit_admin_item_path,class:'btn btn-am btn-success' %>
      </div>
    </div>
  </div>





