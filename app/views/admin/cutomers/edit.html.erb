<p><%= @customer.name %>さんの会員情報編集</p>

<label for ="inputId">会員ID</label>
<%= @customer.id%>
<%= form_with model: @customer do |f| %>
<label for ="inputName">氏名</label>
<%= f.text_field:name,autofocus:true,id:"inputName",placeholder:"氏名" %>
<label for ="inputKana_name">フリガナ</label>
<%= f.text_field:kana_name,autofocus:true,id:"inputKana_name",placeholder:"フリガナ" %>
<label for ="inputPostalcode">郵便番号</label>
<%= f.text_field:postal_code,autofocus:true,placeholder:"郵便番号" %>
<label for ="inputAddress">住所</label>
<%= f.text_field:address,autofocus:true,placeholder:"住所" %>
<label for ="inputTelephone_number">電話番号</label>
<%= f.text_field:telephone_number,autofocus:true,placeholder:"電話番号" %>
<label for ="inputEmail">メールアドレス</label>
<%= f.text_field:email,autofocus:true,placeholder:"メールアドレス" %>
<label for ="inputIs_deleted">会員ステータス</label>
<%= f.radio_button :is_deleted,[['有効',true],['退会',false]] %>
<%= link_to '変更を保存',admin_customer_path,class:'btn btn-sm btn-success' %>