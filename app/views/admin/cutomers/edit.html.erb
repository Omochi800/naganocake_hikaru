<p><%= @customer.name %>さんの会員情報編集</p>

<%= f.label:会員ID %>
<%= @customer.id%>
<%= form_with model: @customer do |f| %>
<%= f.label:氏名 %>
<%= f.text_field:first_name,autofocus:true %>
<%= f.text_field:last_name,autofocus:true %>
<%= f.label:カナ %>
<%= f.text_field:first_name_kana,autofocus:true %>
<%= f.text_field:last_name_kana,autofocus:true %>
<%= f.label:郵便番号 %>
<%= f.text_field:postal_code,autofocus:true %>
<%= f.label:住所 %>
<%= f.text_field:address,autofocus:true %>
<%= f.label:電話番号 %>
<%= f.text_field:telephone_number,autofocus:true %>
<%= f.label:メールアドレス %>
<%= f.text_field:email,autofocus:true %>
<%= f.label:会員ステータス %>
<%= f.radio_button :is_deleted,[['有効',true],['退会',false]] %>
<%= link_to '変更を保存',admin_customer_path,class:'btn btn-sm btn-success' %>